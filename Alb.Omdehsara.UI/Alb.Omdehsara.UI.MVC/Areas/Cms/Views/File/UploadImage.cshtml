
@{
    ViewBag.Title = "UploadImage";
    Layout = "~/Areas/Cms/Views/Shared/_CmsAdminLayout.cshtml";
}
@using Alb.Omdehsara.UI.MVC.Areas.Cms.Models;
@model UploadImageViewModel
@using (Html.BeginForm("UploadImage", "File", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label for="Title" class="control-label col-sm-3 col-xs-12">عنوان</label>
        <div class="col-xs-12 col-sm-9">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label for="Description" class="control-label col-sm-3 col-xs-12">توضیحات</label>
        <div class="col-xs-12 col-sm-9">
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label for="Image" class="control-label col-sm-3 col-xs-12">توضیحات</label>
        <div class="col-xs-12 col-sm-9">
            <input type="file" id="Image" name="Image" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label for="Image" class="control-label col-sm-3 col-xs-12">درج در پوشه اسلایدر </label>
        <div class="col-xs-12 col-sm-9">
            @Html.EditorFor(m => m.UploadInImageFolder)
        </div>
    </div>
    @*<div class="form-group">
        <label for="HasLogo" class="control-label col-sm-3 col-xs-12">درج لوگوی عمده سرا</label>
        <div class="col-xs-12 col-sm-9">
            @Html.EditorFor(m => m.HasLogo)
        </div>
    </div>*@
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10 col-xs-10">
            <input type="submit" value="ثبت" style="width:150px;" class="btn btn-primary">
        </div>
    </div>
}


