@model Alb.Common.Common.TblUser
@using (Html.BeginForm("register", "account", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label for="Email" class="col-sm-4 control-label">ایمیل</label>
        <div class="col-sm-8">
            <input class="form-control" id="Email" value="@Model.Email" name="Email" placeholder="Email">
        </div>
    </div>
    <div class="form-group">
        <label for="FirstName" class="col-sm-4 control-label">نام</label>
        <div class="col-sm-8">
            <input class="form-control" id="FirstName" value="@Model.FirstName" name="FirstName" placeholder="">
        </div>
    </div>
    <div class="form-group">
        <label for="LastName" class="col-sm-4 control-label">نام خانوادگی</label>
        <div class="col-sm-8">
            <input class="form-control" id="LastName" value="@Model.LastName" name="LastName" placeholder="">
        </div>
    </div>
    <div class="form-group">
        <label for="Phone" class="col-sm-4 control-label">تلفن</label>
        <div class="col-sm-8">
            <input class="form-control" id="Phone" value="@Model.Phone" name="Phone" placeholder="">
        </div>
    </div>
    <div class="form-group">
        <label for="Pass" class="col-sm-4 control-label">رمز عبور</label>
        <div class="col-sm-8">
            <input type="password" class="form-control" id="Pass" name="Pass" placeholder="Password">
        </div>
    </div>
    <div class="form-group">
        <label for="PasswordRepeat" class="col-sm-4 control-label">تکرار رمز عبور</label>
        <div class="col-sm-8">
            <input type="password" class="form-control" id="RepeatPass" name="RepeatPass" placeholder="">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
            <button type="submit" class="btn btn-primary">ثبت نام</button>
        </div>
    </div>
}
